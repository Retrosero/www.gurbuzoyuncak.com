    $payment_method = $_POST['payment_method'] ?? 'paytr';
    
    if (!verifyCSRFToken($_POST['csrf_token'] ?? '')) {
        $error = 'GÃ¼venlik hatasÄ±. LÃ¼tfen sayfayÄ± yenileyin.';
    } elseif ($amount < 10) {
        $error = 'Minimum 10 TL yÃ¼kleme yapabilirsiniz.';
    } elseif ($amount > 50000) {
        $error = 'Maksimum 50.000 TL yÃ¼kleme yapabilirsiniz.';
    } else {
        $database = new Database();
        $db = $database->getConnection();
        
        // Bayi bilgilerini al
        $bayi = new Bayi($db);
        $bayi->bayi_id = $_SESSION['bayi_id'];
        $bayi_data = $bayi->bilgileriGetir();
        
        if ($payment_method === 'test' && $test_mode) {
            // Test modu - direkt bakiye yÃ¼kle
            $paytr = new PayTRBayi($db);
            $result = $paytr->createTestPayment($_SESSION['bayi_id'], $amount);
            
            if ($result['success']) {
                updateSessionBalance();
                $success = 'Test Ã¶demesi baÅŸarÄ±yla tamamlandÄ±! Yeni bakiyeniz: ' . formatMoney($result['new_balance']);
            } else {
                $error = $result['error'] ?? 'Test Ã¶demesi baÅŸarÄ±sÄ±z';
            }
        } elseif ($payment_method === 'paytr') {
            // PayTR ile Ã¶deme
            $paytr = new PayTRBayi($db);
            $result = $paytr->createBalancePaymentForm($bayi_data, $amount, $test_mode ? 1 : 0);
            
            if ($result['success']) {
                // PayTR Ã¶deme sayfasÄ±na yÃ¶nlendir
                header('Location: payment-process.php?token=' . $result['token'] . '&oid=' . $result['merchant_oid']);
                exit;
            } else {
                $error = $result['error'] ?? 'Ã–deme oluÅŸturulamadÄ±';
            }
        }
    }
}

